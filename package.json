{
  "name": "linear-reporting",
  "version": "1.0.0",
  "description": "Dashboard for Linear project progress reporting",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scheduler": "node scheduler.js",
    "scheduler-periodic": "node scheduler-periodic.js",
    "export-powerbi": "node export-powerbi.js",
    "report:daily": "node send-team-reports.js",
    "report:weekly": "node send-periodic-reports.js ivy@purpleelephant.ventures weekly",
    "report:monthly": "node send-periodic-reports.js ivy@purpleelephant.ventures monthly",
    "report:quarterly": "node send-periodic-reports.js ivy@purpleelephant.ventures quarterly",
    "report:yearly": "node send-periodic-reports.js ivy@purpleelephant.ventures yearly",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
